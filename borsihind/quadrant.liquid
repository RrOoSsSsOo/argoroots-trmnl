<div class="view">
  <div class="layout layout--row gap--space-between">
    <div class="grid grid--cols-2 h--full">
      <div class="col--span-1 flex flex--col flex--center-y py--3">
        <div class="stretch text--center">
          <span class="value value--tnums value--small" id="current-value"></span>
          <span class="label label--small" id="current-time"></span>
        </div>

        <div class="w--full flex flex--row flex--top pt--1 px--2" id="cheapest-1h-container">
          <div class="bg--black text--white label label--small px--2">1h</div>
          <div class="stretch">
            <div class="w--full flex flex--row">
              <span class="title title--small" id="cheapest-1h-start"></span>
              <span class="title title--small text--center stretch">-</span>
              <span class="title title--small" id="cheapest-1h-end"></span>
            </div>
            <div class="flex flex--row">
              <span class="label label--small stretch" id="cheapest-1h-value"></span>
              <span class="label label--small" id="cheapest-1h-diff"></span>
            </div>
          </div>
        </div>
        <div class="w--full flex flex--row flex--top pt--1 px--2" id="cheapest-2h-container">
          <div class="bg--black text--white label label--small px--2">2h</div>
          <div class="stretch">
            <div class="w--full flex flex--row">
              <span class="title title--small" id="cheapest-2h-start"></span>
              <span class="title title--small text--center stretch">-</span>
              <span class="title title--small" id="cheapest-2h-end"></span>
            </div>
            <div class="flex flex--row">
              <span class="label label--small stretch" id="cheapest-2h-value"></span>
              <span class="label label--small" id="cheapest-2h-diff"></span>
            </div>
          </div>
        </div>
        <div class="w--full flex flex--row flex--top pt--1 px--2" id="cheapest-3h-container">
          <div class="bg--black text--white label label--small px--2">3h</div>
          <div class="stretch">
            <div class="w--full flex flex--row">
              <span class="title title--small" id="cheapest-3h-start"></span>
              <span class="title title--small text--center stretch">-</span>
              <span class="title title--small" id="cheapest-3h-end"></span>
            </div>
            <div class="flex flex--row">
              <span class="label label--small stretch" id="cheapest-3h-value"></span>
              <span class="label label--small" id="cheapest-3h-diff"></span>
            </div>
          </div>
        </div>
      </div>

      <div class="col--span-1 py--1">
        <div id="example-bar-chart" class="w--full h--full"></div>
      </div>
    </div>
  </div>
</div>
