<div class="view">
  <div class="layout layout--row gap--space-between">
    <div class="grid grid--cols-12 h--full">
      <div class="col--span-5 flex flex--col flex--center-y py--3">
        <div class="stretch text--center">
          <span class="value value--tnums value--small" id="current-value"></span>
          <span class="label label--small" id="current-time"></span>
        </div>

        <div class="w--full flex flex--row flex--top mb--1">
          <div class="bg--black text--white label label--small px--2">1h</div>
          <div class="stretch">
            <span class="title title--small" id="cheapest-1h-time"></span>
            <span class="label label--small" id="cheapest-1h-value"></span>
          </div>
        </div>
        <div class="w--full flex flex--row flex--top mb--1">
          <div class="bg--black text--white label label--small px--2">2h</div>
          <div class="stretch">
            <span class="title title--small" id="cheapest-2h-time"></span>
            <span class="label label--small" id="cheapest-2h-value"></span>
          </div>
        </div>
        <div class="w--full flex flex--row flex--top mb--1">
          <div class="bg--black text--white label label--small px--2">3h</div>
          <div class="stretch">
            <span class="title title--small" id="cheapest-3h-time"></span>
            <span class="label label--small" id="cheapest-3h-value"></span>
          </div>
        </div>
      </div>

      <div class="col--span-7 py--1">
        <div id="example-bar-chart" class="w--full h--full"></div>
      </div>
    </div>
  </div>
</div>
